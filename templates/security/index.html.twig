{% extends 'main.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error {color: red}
</style>

<div class="example-wrapper">
    {# <a href="{{ path('logout') }}">Logout</a> #}
    <h2>Login Page</h2>

    {% if error %}
        {# <span class="error">{{ error.messageKey }}</span> #}
        <span class="error">
            <div>Username atau Password salah!</div>
        </span>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <input type="text" name="_username" value="{{ last_username }}" placeholder="Username">
        <input type="password" name="_password" placeholder="Password">
        <input type="hidden" name="_target_path" value="{{ path('article_list') }}"/>
        <button type="submit">Login</button>
    </form>
    <p>Do not have an account? Click button Register.<br>
    <a href="{{ path('register') }}" class="btn btn-primary">Register</a>
    </p>
</div>
{% endblock %}
